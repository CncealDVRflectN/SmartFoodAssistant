<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.solutions.dumb.smartfoodassistant.activities.SignInActivity"
    android:padding="20dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/user_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/user_login_title"
            style="@style/UserInfoContainer"
            app:layout_constraintTop_toBottomOf="parent"
            android:text="@string/user_login_title"/>

        <TextView
            android:id="@+id/user_login"
            style="@style/UserInfoContainer"
            app:layout_constraintTop_toBottomOf="@id/user_login_title"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/user_id_title"
            style="@style/UserInfoContainer"
            app:layout_constraintTop_toBottomOf="@id/user_login"
            android:text="@string/user_id_title"/>

        <TextView
            android:id="@+id/user_id"
            style="@style/UserInfoContainer"
            app:layout_constraintTop_toBottomOf="@+id/user_id_title" />

    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/user_info_container"
        android:background="@drawable/google"/>

    <!--<Button-->
        <!--android:id="@+id/sign_out_button"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintTop_toBottomOf="@id/sign_in_button"-->
        <!--android:text="sign out" />-->

</android.support.constraint.ConstraintLayout>
